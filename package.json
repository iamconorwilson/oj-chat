  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@types/ws": "^8.18.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "rimraf": "^6.1.0",
    "shx": "^0.4.0",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
