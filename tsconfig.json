{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "allowJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "@types/**/*",
    "public"
  ],
}